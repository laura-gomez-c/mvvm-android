<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ceiba.capacitacion.mvvmpattern">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".shared.view.MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_pop_corn"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pop_corn_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVVMPattern">
        <activity android:name=".shared.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>